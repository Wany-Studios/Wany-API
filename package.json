{
    "name": "next-js",
    "version": "0.0.1",
    "description": "",
    "author": "",
    "private": true,
    "license": "UNLICENSED",
    "scripts": {
        "build": "nest build",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "start": "nest start",
        "start:dev": "nest start --watch",
        "start:debug": "nest start --debug --watch",
        "start:prod": "npx pm2-runtime start pm2.json",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "cross-env NODE_ENV=test jest",
        "test:watch": "cross-env NODE_ENV=test jest --watchAll",
        "test:cov": "cross-env NODE_ENV=test jest --coverage",
        "test:debug": "cross-env NODE_ENV=test node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "cross-env NODE_ENV=test jest --config ./test/jest-e2e.json",
        "typeorm:cli": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli",
        "migration:create": "dotenv-flow -- npm run typeorm:cli migration:create -o -n",
        "migration:run": "npm run typeorm:cli migration:run -- -d dist/modules/database/database.data-source.js"
    },
    "dependencies": {
        "@nestjs-modules/mailer": "^1.9.1",
        "@nestjs/common": "^10.0.0",
        "@nestjs/core": "^10.0.0",
        "@nestjs/jwt": "^10.1.0",
        "@nestjs/platform-express": "^10.0.0",
        "@nestjs/swagger": "^7.1.4",
        "@nestjs/typeorm": "^10.0.0",
        "bcrypt": "^5.1.0",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.0",
        "cookie-parser": "^1.4.6",
        "dotenv-flow": "^3.2.0",
        "express": "^4.18.2",
        "express-session": "^1.17.3",
        "helmet": "^7.0.0",
        "kill-port": "^2.0.1",
        "mysql2": "^3.5.2",
        "nodemailer": "^6.9.4",
        "reflect-metadata": "^0.1.13",
        "rxjs": "^7.8.1",
        "session-file-store": "^1.5.0",
        "sqlite3": "^5.1.6",
        "typeorm": "^0.3.17"
    },
    "devDependencies": {
        "@faker-js/faker": "^8.0.2",
        "@nestjs/cli": "^10.0.0",
        "@nestjs/schematics": "^10.0.0",
        "@nestjs/testing": "^10.0.0",
        "@types/bcrypt": "^5.0.0",
        "@types/cookie-parser": "^1.4.3",
        "@types/dotenv-flow": "^3.2.0",
        "@types/express": "^4.17.17",
        "@types/express-session": "^1.17.7",
        "@types/jest": "^29.5.2",
        "@types/multer": "^1.4.7",
        "@types/node": "^20.3.1",
        "@types/nodemailer": "^6.4.8",
        "@types/session-file-store": "^1.2.2",
        "@types/supertest": "^2.0.12",
        "@typescript-eslint/eslint-plugin": "^5.59.11",
        "@typescript-eslint/parser": "^5.59.11",
        "better-sqlite3": "^8.5.0",
        "cross-env": "^7.0.3",
        "dotenv-cli": "^7.3.0",
        "eslint": "^8.42.0",
        "eslint-config-prettier": "^8.8.0",
        "eslint-plugin-prettier": "^4.2.1",
        "jest": "^29.5.0",
        "prettier": "^2.8.8",
        "source-map-support": "^0.5.21",
        "supertest": "^6.3.3",
        "ts-jest": "^29.1.0",
        "ts-loader": "^9.4.3",
        "ts-node": "^10.9.1",
        "tsconfig-paths": "^4.2.0",
        "typeorm-transactional-cls-hooked": "^0.1.21",
        "typescript": "^5.1.3"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    }
}
